{
    "manifest_version": 3,
    "name": "35 Pokes Extension",
    "description": "Browser extension for the 35 Pokes community",
    "version": "0.1",
    "homepage_url": "https://github.com/swordfishtr/35PokesExtension",
    "icons": {
        "16": "35_logo.PNG",
        "32": "35_logo.PNG",
        "48": "35_logo.PNG",
        "128": "35_logo.PNG"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js",
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["https://play.pokemonshowdown.com/*"],
        "js": ["content_main.js"],
        "run_at": "document_end",
        "world": "MAIN"
    }, {
        "matches": ["https://play.pokemonshowdown.com/*"],
        "js": ["content_iso.js"],
        "run_at": "document_idle",
        "world": "ISOLATED"
    }],
    "permissions": ["storage"],
    "host_permissions": [
        "https://api.github.com/repos/swordfishtr/*",
        "https://raw.githubusercontent.com/swordfishtr/*"
    ]
}
